<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rootRL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/catch_the_kenny_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="313dp"
        android:layout_height="79dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Catch The Kenny!"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:layout_marginTop="124dp"
        android:fontFamily="sans-serif-black"
        android:onClick="goPlayScreen"
        android:text="Oyna"
        app:backgroundTint="#DA5959"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/highScoreButton"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="sans-serif-black"
        android:onClick="goHighScoreScreen"
        android:text="YÃ¼ksek Skorlar"
        app:backgroundTint="#DA5959"
        app:layout_constraintBottom_toBottomOf="@+id/rootRL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

</androidx.constraintlayout.widget.ConstraintLayout>